<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>服务器关隘首领</title>
  <link href="file://{{assetsPath}}/bootstrap-5.3.8-dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="file://{{assetsPath}}/bootstrap-5.3.8-dist/js/bootstrap.min.js"></script>
  {{!--
  <link href="file://{{assetsPath}}/bootstrap-icons-1.13.1/bootstrap-icons.min.css" rel="stylesheet" /> --}}
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>

<body>
  <div class="container-fluid py-4">
    <div class="card shadow-sm">
      <div class="card-header bg-light text-dark">

        <span>
          <i class="bi bi-exclamation-triangle"></i>
          <span>服务器关隘首领</span>
        </span>
        <span>
          <i class="bi bi-globe"></i>
          <span>{{formatTime time}}</span>
        </span>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover table-striped mb-0">
            <tbody>
              {{#each data}}
              <tr>
                <td class="text-center align-middle">
                  <div>{{server}}</div>
                </td>
                {{#each data}}
                <td class="text-center align-middle">
                  <div>
                    <img src="file://{{@root.assetsPath}}/imgs/{{camp_name}}.png" alt="{{camp_name}}" />
                    {{castle}}
                  </div>
                  <div>{{str_status}}</div>
                  {{#if (eq status 1)}}
                  <div>{{time start_time}}({{formatInterval start_time}})</div>
                  {{else}}
                  <div>{{time end_time}}({{formatInterval end_time}})</div>
                  {{/if}}
                </td>
                {{/each}}
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <style>
    body {
      font-family: "Microsoft YaHei", Arial, sans-serif;
    }

    .card {
      border-radius: 15px;
      border: none;
    }

    .card-header {
      border-radius: 15px 15px 0 0 !important;
      padding: 16px;
      display: flex;
      justify-content: space-evenly;
      align-items: center;
      font-size: 22px;
    }

    .table {
      font-size: 22px;
    }

    .table thead th {
      font-weight: 600;
      border-bottom: 2px solid #dee2e6;
      padding: 16px;
    }

    .table tbody td {
      padding: 16px;
    }

    .table-hover tbody tr:hover {
      background-color: rgba(102, 126, 234, 0.1);
    }

    .badge {
      padding: 0.5rem 0.75rem;
      font-weight: 500;
    }

    .card-footer {
      background-color: #f8f9fa;
      border-radius: 0 0 15px 15px !important;
      padding: 1rem;
    }
  </style>
</body>

</html>

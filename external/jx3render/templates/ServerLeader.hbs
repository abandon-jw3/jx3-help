<html lang="zh-CN">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>服务器关隘首领</title>
  <style>
    /* Reset & Base */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: "Microsoft YaHei", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
      background-color: #f0f2f5;
      padding: 40px;
      color: #333;
      line-height: 1.5;
      width: 960px;
    }

    /* Card Container */
    .card {
      max-width: 960px;
      margin: 0 auto;
      background: #ffffff;
      border-radius: 16px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
      overflow: hidden;
    }

    /* Header */
    .header {
      padding: 24px 32px;
      background: linear-gradient(to right, #f8f9fa, #ffffff);
      border-bottom: 1px solid #eaeaea;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      gap: 8px;
    }

    .header h1 {
      font-size: 28px;
      font-weight: 600;
      color: #2c3e50;
      display: flex;
      align-items: center;
      gap: 12px;
      margin: 0;
    }

    .header .sub-title {
      font-size: 18px;
      color: #64748b;
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .icon-flag {
      color: #e67e22;
      width: 32px;
      height: 32px;
    }

    /* Table Styling */
    .table-container {
      width: 100%;
      overflow-x: auto;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      border-spacing: 0;
    }

    /* No thead styles needed as there is no thead */

    td {
      padding: 20px 16px;
      text-align: center;
      vertical-align: middle;
      font-size: 20px;
      border-bottom: 1px solid #edf2f7;
    }

    tbody tr:last-child td {
      border-bottom: none;
    }

    tbody tr:hover {
      background-color: #f8fafc;
    }

    tbody tr:nth-child(even) {
      background-color: #fafafa;
    }

    /* Column Specific Styles */
    .col-server {
      font-weight: 700;
      color: #2c3e50;
      font-size: 22px;
      border-right: 1px solid #edf2f7;
      background-color: #fcfcfc;
      width: 140px;
    }

    .cell-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 6px;
    }

    .castle-info {
      display: flex;
      align-items: center;
      gap: 6px;
      font-weight: 600;
      font-size: 20px;
      color: #333;
    }

    .camp-icon {
      width: 24px;
      height: 24px;
      border-radius: 4px;
      object-fit: contain;
    }

    .status-active {
      color: #10b981;
      font-weight: 600;
    }

    .status-inactive {
      color: #64748b;
    }

    .time-info {
      font-size: 16px;
      color: #94a3b8;
      font-family: Consolas, Monaco, monospace;
    }

    /* Footer/Bottom Spacing */
    .footer-space {
      height: 16px;
      background: #fff;
    }
  </style>
</head>

<body>
  <div class="card">
    <div class="header">
      <h1>
        <!-- SVG Icon for Flag/Leader -->
        <svg class="icon-flag" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
          <path d="M14.4 6L14 4H5v17h2v-7h5.6l.4 2h7V6z" />
        </svg>
        服务器关隘首领
      </h1>
      <div class="sub-title">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
          <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z" />
          <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z" />
        </svg>
        {{formatTime time 'YYYY-MM-DD HH:mm'}}
      </div>
    </div>

    <div class="table-container">
      <table>
        <tbody>
          {{#each data}}
          <tr>
            <td class="col-server">
              {{server}}
            </td>
            {{#each data}}
            <td>
              <div class="cell-content">
                <div class="castle-info">
                  {{#if (eq camp_name '浩气盟')}}
                  <img class="camp-icon"
                    src="data:image/png;base64,"
                    alt="浩气盟" />
                  {{else if (eq camp_name '恶人谷')}}
                  <img class="camp-icon"
                    src="data:image/png;base64,"
                    alt="恶人谷" />
                  {{/if}}
                  <span>{{castle}}</span>
                </div>

                <div class="{{#if (eq status 1)}}status-active{{else}}status-inactive{{/if}}">
                  {{str_status}}
                </div>

                <div class="time-info">
                  {{#if (eq status 1)}}
                  {{formatTime start_time "HH:mm:ss"}} ({{formatInterval start_time}})
                  {{else}}
                  {{formatTime end_time "HH:mm:ss"}} ({{formatInterval end_time}})
                  {{/if}}
                </div>
              </div>
            </td>
            {{/each}}
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="footer-space"></div>
  </div>
</body>

</html>

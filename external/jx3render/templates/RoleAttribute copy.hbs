              {{/each}}
            </div>
          </div>
        </div>
        {{/with}}

        <!-- Ring 1 (Index 10) -->
        {{#with equipList.[10]}}
        <div class="equip-item" style="flex-direction: row-reverse; text-align: right;">
          <div class="equip-icon-wrapper q-{{color}}">
            <img src="{{icon}}" class="equip-icon">
            <div class="equip-strength">+{{strengthLevel}}</div>
          </div>
          <div class="equip-details">
            <div class="equip-name q-text-{{color}}">{{name}}</div>
            <div class="equip-enchant">
              {{#each permanentEnchant}}{{name}} {{/each}}
            </div>
            <div class="equip-stones" style="justify-content: flex-end;">
              {{#each fiveStone}}
              <img src="{{icon}}" class="stone-icon">
              {{/each}}
            </div>
          </div>
        </div>
        {{/with}}

        <!-- Ring 2 (Index 11) -->
        {{#with equipList.[11]}}
        <div class="equip-item" style="flex-direction: row-reverse; text-align: right;">
          <div class="equip-icon-wrapper q-{{color}}">
            <img src="{{icon}}" class="equip-icon">
            <div class="equip-strength">+{{strengthLevel}}</div>
          </div>
          <div class="equip-details">
            <div class="equip-name q-text-{{color}}">{{name}}</div>
            <div class="equip-enchant">
              {{#each permanentEnchant}}{{name}} {{/each}}
            </div>
            <div class="equip-stones" style="justify-content: flex-end;">
              {{#each fiveStone}}
              <img src="{{icon}}" class="stone-icon">
              {{/each}}
            </div>
          </div>
        </div>
        {{/with}}

        <!-- Range (Index 1) -->
        {{#with equipList.[1]}}
        <div class="equip-item" style="flex-direction: row-reverse; text-align: right;">
          <div class="equip-icon-wrapper q-{{color}}">
            <img src="{{icon}}" class="equip-icon">
            <div class="equip-strength">+{{strengthLevel}}</div>
          </div>
          <div class="equip-details">
            <div class="equip-name q-text-{{color}}">{{name}}</div>
            <div class="equip-enchant">
              {{#each permanentEnchant}}{{name}} {{/each}}
            </div>
            <div class="equip-stones" style="justify-content: flex-end;">
              {{#each fiveStone}}
              <img src="{{icon}}" class="stone-icon">
              {{/each}}
            </div>
          </div>
        </div>
        {{/with}}

        <!-- Weapon (Index 0) -->
        {{#with equipList.[0]}}
        <div class="equip-item" style="flex-direction: row-reverse; text-align: right;">
          <div class="equip-icon-wrapper q-{{color}}">
            <img src="{{icon}}" class="equip-icon">
            <div class="equip-strength">+{{strengthLevel}}</div>
          </div>
          <div class="equip-details">
            <div class="equip-name q-text-{{color}}">{{name}}</div>
            <div class="equip-enchant">
              {{#each permanentEnchant}}{{name}} {{/each}}
            </div>
            <div class="equip-stones" style="justify-content: flex-end;">
              {{#if colorStone}}
              <img src="{{colorStone.icon}}" class="stone-icon" style="border: 1px solid #a335ee;">
              {{/if}}
              {{#each fiveStone}}
              <img src="{{icon}}" class="stone-icon">
              {{/each}}
            </div>
          </div>
        </div>
        {{/with}}
      </div>
    </div>
  </div>
</body>

</html>
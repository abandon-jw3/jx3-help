  <style>
    /* Reset & Base */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      width: 1400px;
      margin: 0 auto;
      font-family: "Microsoft YaHei UI", "Microsoft YaHei", "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Source Han Sans CN", sans-serif;
      background-color: #fceef5;
      /* Base Pink */
      background-image: radial-gradient(#ffc0cb 15%, transparent 16%), radial-gradient(#ffc0cb 15%, transparent 16%);
      background-size: 20px 20px;
      background-position: 0 0, 10px 10px;
      color: #2d3436;
    }

    .container {
      padding: 40px;
      min-height: 100vh;
    }

    /* Header Section */
    .page-header {
      margin-bottom: 40px;
      text-align: center;
      position: relative;
    }

    .page-title {
      font-size: 36px;
      font-weight: 900;
      color: #6c5ce7;
      text-shadow: 2px 2px 0px #fff;
      display: inline-block;
      background: #fff;
      padding: 10px 30px;
      border-radius: 50px;
      box-shadow: 0 4px 15px rgba(108, 92, 231, 0.2);
      transform: skew(-10deg);
    }

    .page-title span {
      display: block;
      transform: skew(10deg);
    }

    .subtitle {
      font-size: 14px;
      color: #999;
      margin-left: 10px;
      font-weight: normal;
    }

    /* Grid Layout */
    .student-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      /* 4 cards per row */
      gap: 20px;
    }

    /* Student Card */
    .student-card {
      background: #fff;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      position: relative;
      border: 1px solid rgba(255, 255, 255, 0.5);
      display: flex;
      flex-direction: column;
    }

    .student-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 30px rgba(108, 92, 231, 0.15);
      z-index: 10;
    }

    /* Card Header with Role Info */
    .card-header {
      background: linear-gradient(135deg, #a29bfe 0%, #6c5ce7 100%);
      padding: 15px;
      color: #fff;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .role-name {
      font-size: 20px;
      font-weight: bold;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
    }

    .role-level {
      font-size: 14px;
      background: rgba(255, 255, 255, 0.2);
      padding: 2px 8px;
      border-radius: 10px;
      font-family: "Consolas", monospace;
    }

    /* Card Body */
    .card-body {
      padding: 20px;
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .tag-row {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }

    .tag {
      font-size: 13px;
      padding: 4px 10px;
      border-radius: 6px;
      font-weight: 600;
    }

    .tag.force {
      background: #eff6ff;
      color: #2563eb;
    }

    .tag.body {
      background: #fdf2f8;
      color: #db2777;
    }

    .tag.camp {
      background: #fff7ed;
      color: #ea580c;
    }

    .tag.tong {
      background: #f0fdf4;
      color: #16a34a;
      max-width: 100%;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    /* Comment Section */
    .comment-box {
      margin-top: auto;
      background: #fafafa;
      padding: 12px;
      border-radius: 12px;
      font-size: 14px;
      color: #636e72;
      position: relative;
      border-left: 4px solid #fab1a0;
    }

    .comment-box::before {
      content: "üí¨";
      margin-right: 5px;
    }

    /* Index Badge */
    .card-index {
      position: absolute;
      top: 10px;
      right: 10px;
      font-size: 60px;
      font-weight: 900;
      color: rgba(255, 255, 255, 0.1);
      line-height: 1;
      pointer-events: none;
    }

    /* Footer decoration */
    .footer-deco {
      margin-top: 40px;
      height: 10px;
      background: repeating-linear-gradient(45deg,
          #ff7675,
          #ff7675 10px,
          #fff 10px,
          #fff 20px);
      border-radius: 20px;
      opacity: 0.6;
    }
  </style>
</head>

<body>
  <div class="container">

    <div class="page-header">
      <div class="page-title">
        <span>{{server}} ÂæíÂºüÂêçÂΩï <span class="subtitle">STUDENT LIST</span></span>
      </div>
    </div>

    <div class="student-grid">
      {{#each data}}
      <div class="student-card">
        <div class="card-header">
          <div class="role-name">{{roleName}}</div>
          <div class="role-level">Lv.{{roleLevel}}</div>
          <div class="card-index">{{inc @index}}</div>
        </div>

        <div class="card-body">
          <div class="tag-row">
            <span class="tag force">{{forceName}}</span>
            <span class="tag body">{{bodyName}}</span>
          </div>

          <div class="tag-row">
            <span class="tag camp">ÈòµËê•: {{campName}}</span>
          </div>

          {{#if tongName}}
          <div class="tag-row">
            <span class="tag tong">Â∏Æ‰ºö: {{tongName}}</span>
          </div>
          {{/if}}

          {{#if comment}}
          <div class="comment-box">
            {{comment}}
          </div>
          {{else}}
          <div class="comment-box" style="color:#b2bec3; font-style:italic;">
            ÊöÇÊó†ÊãúÂ∏àÂÆ£Ë®Ä
          </div>
          {{/if}}
        </div>
      </div>
      {{/each}}
    </div>

    <div class="footer-deco"></div>
  </div>
</body>

</html>
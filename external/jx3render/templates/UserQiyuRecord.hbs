<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>角色奇遇记录</title>
  <link href="file://{{assetsPath}}/bootstrap-5.3.8-dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="file://{{assetsPath}}/bootstrap-5.3.8-dist/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="file://{{assetsPath}}/bootstrap-icons-1.13.1/bootstrap-icons.min.css">
</head>

<body>
  <div class="container-fluid py-4">
    <div class="card shadow-sm">
      <div class="card-header bg-light text-dark">
        <h4 class="mb-0 text-center">
          <i class="bi bi-stars"></i>角色奇遇记录
        </h4>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover table-striped mb-0">
            <thead class="table-light">
              <tr>
                <th scope="col" class="text-center" style="width: 120px;">服务器</th>
                <th scope="col" class="text-center" style="width: 120px;">角色名称</th>
                <th scope="col" class="text-center" style="width: 120px;">奇遇</th>
                <th scope="col" class="text-center" style="width: 220px;">时间</th>
              </tr>
            </thead>
            <tbody>
              {{#each this}}
              <tr>
                <td class="text-center align-middle">
                  <div>{{server}}</div>
                </td>
                <td class="text-center align-middle">
                  <div class="text-info">{{name}}</div>
                </td>
                <td class="text-center align-middle">
                  <div class="text-success">{{event}}</div>
                </td>
                <td class="text-center align-middle">
                  <div>{{formatTime time}}</div>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <style>
    body {
      font-family: "Microsoft YaHei", Arial, sans-serif;
    }

    .card {
      border-radius: 15px;
      border: none;
    }

    .card-header {
      border-radius: 15px 15px 0 0 !important;
      padding: 16px;
    }

    .table {
      font-size: 24px;
    }

    .table thead th {
      font-weight: 600;
      border-bottom: 2px solid #dee2e6;
      padding: 16px;
    }

    .table tbody td {
      padding: 16px;
    }

    .table-hover tbody tr:hover {
      background-color: rgba(102, 126, 234, 0.1);
    }

    .badge {
      padding: 0.5rem 0.75rem;
      font-weight: 500;
    }

    .card-footer {
      background-color: #f8f9fa;
      border-radius: 0 0 15px 15px !important;
      padding: 1rem;
    }
  </style>
</body>

</html>
        <div class="role-text">
          <h1>{{roleName}}</h1>
          <div class="role-tags">
            <span class="tag">{{zoneName}} {{serverName}}</span>
            <span class="tag">{{forceName}}</span>
            <span class="tag">{{bodyName}}</span>
          </div>
        </div>
      </div>
      <div class="total-score">
        <div class="label">GS SCORE</div>
        <div class="value">{{panelList.score}}</div>
